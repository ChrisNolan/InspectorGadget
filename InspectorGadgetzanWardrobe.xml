<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<!-- Slot buttons to show the appearances icons -->
	<Button name="InspectorGadgetWardrobeItemSlotButtonTemplate" inherits="ItemButtonTemplate" virtual="true">
		<Scripts>
            <OnLoad>
				IGWardrobeItemSlotButton_OnLoad(self);
			</OnLoad>
            <OnEvent>
				--InspectorGadgetWardrobeItemSlotButton_OnEvent(self, event, ...);
			</OnEvent>
            <OnClick>
				HandleModifiedItemClick(self.itemLink);
			</OnClick>
			<OnUpdate>
				CursorOnUpdate(self);
				if ( GameTooltip:IsOwned(self) ) then
					IGWardrobeItemSlotButton_OnEnter(self);
				end
			</OnUpdate>
            <OnEnter>
				IGWardrobeItemSlotButton_OnEnter(self, motion);
			</OnEnter>
            <OnLeave>
				GameTooltip:Hide();
				ResetCursor();
			</OnLeave>
        </Scripts>
		<NormalTexture file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="64" y="64"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="-1"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
    </Button>
	<Button name="InspectorGadgetWardrobeItemSlotButtonLeftTemplate" inherits="InspectorGadgetWardrobeItemSlotButtonTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture name="$parentFrame" inherits="Char-LeftSlot">	
					<Anchors>
						<Anchor point="TOPLEFT" x="-4"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>
	<Button name="InspectorGadgetWardrobeItemSlotButtonRightTemplate" inherits="InspectorGadgetWardrobeItemSlotButtonTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture name="$parentFrame" inherits="Char-RightSlot">	
					<Anchors>
						<Anchor point="TOPRIGHT" x="4"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>
	<Button name="InspectorGadgetWardrobeItemSlotButtonBottomTemplate" inherits="InspectorGadgetWardrobeItemSlotButtonTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture name="$parentFrame" inherits="Char-BottomSlot">	
					<Anchors>
						<Anchor point="TOPLEFT" x="-4" y="8"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>
	<!-- Text Buttons for showing appearance names -->
	<Button name="InspectorGadgetWardrobeItemTextButtonTemplate" inherits="MagicButtonTemplate, TruncatedButtonTemplate" virtual="true">
		<Size x="114" y="36"/>
		<HighlightTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" setAllPoints="true" alphaMode="ADD"/>
		<NormalTexture file="Interface\CharacterFrame\Char-Stat-Middle" setAllPoints="true" vertTile="true" HorizTile="true"/>
        <Scripts>
            <OnLoad>
				--InspectorGadgetWardrobeItemSlotButton_OnLoad(self);

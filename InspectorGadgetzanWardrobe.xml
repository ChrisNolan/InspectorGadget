							<OnEnable>
								self:SetAlpha(1);
							</OnEnable>
							<OnDisable>
								self:SetAlpha(0.5);
							</OnDisable>
							<OnLeave>
								GameTooltip:Hide();
							</OnLeave>
						</Scripts>
					</Button>

                        <Anchor point="TOP" relativeTo="InspectorGadgetWardrobeHeaderText" relativePoint="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="-3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
				<!-- TODO put a background texture on here, or remove the below if not -->
				<Texture name="InspectorGadgetWardrobeFaction" file="Interface\Timer\Panda-Logo" hidden="true">
					<Size x="256" y="256"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="-10"/>
					</Anchors>
					<TexCoords left="0" right="1" top="0" bottom="1"/>	
				</Texture>
            </Layer>
		</Layers>

			</OnEvent>
            <OnClick>
				IGWardrobeItemTextButton_OnClick(self);
			</OnClick>
			<OnUpdate>
				CursorOnUpdate(self);
				if ( GameTooltip:IsOwned(self) ) then
					--IGWardrobeItemTextButton_OnEnter(self);
				end
			</OnUpdate>
            <OnEnter>
				--IGWardrobeItemTextButton_OnEnter(self, motion);
			</OnEnter>
            <OnLeave>
				GameTooltip:Hide();
				ResetCursor();
			</OnLeave>
        </Scripts>
    </Button>
	<Button name="InspectorGadgetWardrobeItemTextButtonLeftTemplate" inherits="InspectorGadgetWardrobeItemTextButtonTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture name="$parentFrame">
					<Anchors>
